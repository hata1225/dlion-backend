// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64", "linux-arm64-openssl-1.1.x", "linux-arm64-openssl-3.0.x"]
}


// Post
// 投稿
model Post {
  postId String @id @default(uuid()) @map("post_id")
  title String? @db.VarChar(50) @map("title")
  description String? @db.VarChar(1000) @map("description")
  userId String @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("posts")
}


// User
// ユーザー情報
model User {
  userId String @id @default(uuid()) @map("user_id")
  email String @unique @db.VarChar(255)
  name String @db.VarChar(50)
  accountName String @unique @db.VarChar(20) @map("account_name")
  googleId String? @unique @map("google_id")
  isAdmin Boolean @default(false) @map("is_admin")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("users")
}